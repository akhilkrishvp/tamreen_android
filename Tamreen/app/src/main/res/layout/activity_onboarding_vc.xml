<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_image">
    <androidx.core.widget.NestedScrollView
        android:layout_width="@dimen/margin_basic_0dp"
        android:layout_height="@dimen/margin_basic_0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/letsStartedBtb">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_basic_16dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/onBoardingTitleTV"
                android:layout_width="@dimen/margin_basic_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/sf_pro_bold"
                android:textSize="28sp"
                android:text="Smart  Skilled"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/onBoardingDescTV"
                android:layout_width="@dimen/margin_basic_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/sf_pro_regular"
                android:textSize="14sp"
                android:text="Personalized workouts and plans for\n any fitness goal and skill level"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/onBoardingTitleTV"
                />

            <LinearLayout
                android:id="@+id/dotsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/onBoardingDescTV"
               >
            </LinearLayout>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="0dp"
                android:layout_height="350dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/dotsLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/skipBtn"
        android:layout_width="@dimen/margin_basic_0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_basic_24dp"
        android:text="@string/skip"
        android:textSize="@dimen/font_size_16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/font_size_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/letsStartedBtb"
        android:layout_width="@dimen/margin_basic_0dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="@dimen/font_size_16sp"
        android:fontFamily="@font/sf_pro_medium"
        android:text="Let's get started"
        android:background="@drawable/white_corner_curved_bg_10"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/skipBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>